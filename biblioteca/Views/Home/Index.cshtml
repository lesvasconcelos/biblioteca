<script type="text/javascript" src="~/Scripts/Model/Home.js"></script>
<style type="text/css">
    .w35{
        width: 35%;
    }
    .w20{
        width: 20%;
    }
    .w10{
        width: 10%;
    }
</style>

<div class="container">
    <h2>Catálogo online</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Adicionar</button><br /><br />
    <table id="gridCatalogo" class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th data-column-id="Id" data-visible="false">Id</th>
                <th data-column-id="Titulo" data-sortable="false" data-header-css-class="w35">Título</th>
                <th data-column-id="Autor" data-sortable="false" data-header-css-class="w35">Autor</th>
                <th data-column-id="Ano" data-sortable="false" data-header-css-class="w10">Ano</th>
                <th data-column-id="commands" data-formatter="commands" data-header-css-class="w20"></th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Adicionar livro</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Título</label>
                        <input type="text" class="form-control" id="Titulo" placeholder="Título" />
                    </div>
                    <div class="form-group">
                        <label for="Age">Autor</label>
                        <input type="text" class="form-control" id="Autor" placeholder="Autor" />
                    </div>
                    <div class="form-group">
                        <label for="State">Ano</label>
                        <input type="number" class="form-control" id="Ano" placeholder="Ano" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Adicionar</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Atualizar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>